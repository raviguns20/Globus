<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/d10" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:background="@drawable/shape_square_gray_light_border"
        android:paddingLeft="@dimen/d10"
        android:paddingRight="@dimen/d10"
        android:paddingTop="@dimen/d10" >

        <LinearLayout
            android:id="@+id/LLImage"
            android:layout_width="90dp"
            android:layout_height="110dp"
            android:background="@drawable/shape_square_gray_light_border"
            android:padding="@dimen/d2" >

            <ImageView
                android:id="@+id/imgProduct"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/product_img" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/LLImage"
            android:layout_alignTop="@+id/LLImage"
            android:layout_toRightOf="@+id/LLImage"
            android:paddingLeft="@dimen/d10"
            android:paddingRight="@dimen/d10" >

            <com.globus.fontutil.TextView_FontFutuLt_0
                android:id="@+id/txtLableSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/txtProductName"
                android:layout_marginTop="@dimen/d5"
                android:text="Size: "
                android:textSize="13dp" />

            <com.globus.fontutil.TextView_FontFutuLt_0
                android:id="@+id/txtProductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="Casual T-shirt"
                android:textSize="13dp" />

            <com.globus.fontutil.TextView_FUTURAM
                android:id="@+id/txtPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/txtLableSize"
                android:layout_below="@+id/txtLableSize"
                android:layout_marginTop="@dimen/d5"
                android:text="Rs.499"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/black"
                android:textSize="@dimen/d14" />

            <com.globus.fontutil.TextView_FontFutuLt_0
                android:id="@+id/txtLableQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/txtSize"
                android:layout_alignBottom="@+id/txtSize"
                android:layout_marginLeft="@dimen/d10"
                android:layout_toRightOf="@+id/txtSize"
                android:text="Qty: "
                android:textSize="13dp" />

            <com.globus.fontutil.TextView_FUTURAM
                android:id="@+id/txtQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/txtLableQuantity"
                android:layout_alignBottom="@+id/txtLableQuantity"
                android:layout_toRightOf="@+id/txtLableQuantity"
                android:text="1"
                android:textColor="@color/gray_dark"
                android:textSize="13dp" />

            <com.globus.fontutil.TextView_FUTURAM
                android:id="@+id/txtSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/txtLableSize"
                android:layout_alignTop="@+id/txtLableSize"
                android:layout_toRightOf="@+id/txtLableSize"
                android:text="L"
                android:textColor="@color/gray_dark"
                android:textSize="13dp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/LLRow"
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_alignLeft="@+id/LLImage"
            android:layout_below="@+id/LLImage"
            android:layout_marginTop="@dimen/d18"
            android:background="@color/gray"
            android:orientation="vertical" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/LLImage"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/LLRow"
            android:orientation="horizontal"
            android:weightSum="100" >

            <LinearLayout
                android:id="@+id/LLRemove"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/d2"
                    android:src="@drawable/remove_icon" />

                <com.globus.fontutil.TextView_FontFutuLt_0
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d2"
                    android:text="REMOVE"
                    android:textColor="@color/black"
                    android:textSize="14dp" />
            </LinearLayout>

            <View
                android:layout_width="0.3dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/d5"
                android:layout_marginTop="@dimen/d5"
                android:background="@color/gray" />

            <LinearLayout
                android:id="@+id/LLEdit"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/d2"
                    android:src="@drawable/edit_icon" />

                <com.globus.fontutil.TextView_FontFutuLt_0
                    android:id="@+id/textView75"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d2"
                    android:text="EDIT"
                    android:textColor="@color/black"
                    android:textSize="14dp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>