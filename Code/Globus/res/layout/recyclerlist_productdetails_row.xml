<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/s5dip"
        android:background="@drawable/shape_square_border"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical" >

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/imgProduct"
            android:layout_width="@dimen/s200dip"
            android:layout_height="@dimen/s170dip"
            android:layout_margin="@dimen/s5dip"
            />
<LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >
        <com.globus.fontutil.TextView_FontFutuLt_0
            android:id="@+id/txtProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/s5dip"
            android:text="Paresh Sukheja"
            android:textSize="@dimen/s20sp" />
</LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <com.globus.fontutil.TextView_FUTURAM
                style="@style/style_txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/s5dip"
                android:text="@string/txt_rs" />

            <com.globus.fontutil.TextView_FUTURAM
                android:id="@+id/txtProductPrice"
                style="@style/style_txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/s5dip"
                android:layout_marginLeft="@dimen/s2dip"
                android:text="789" />
        </LinearLayout>
    </LinearLayout>
